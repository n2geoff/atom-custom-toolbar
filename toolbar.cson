[
    {
        type: "button"
        icon: "list-unordered"
        callback: "tree-view:toggle"
        tooltip: "View Files"
    }
    {
        type: "button"
        icon: "eye"
        callback: "project-manager:list-projects"
        tooltip: "List Projects"
    }
    {
        type: "spacer"
    }
    {
        type: "button"
        icon: "git-commit"
        callback: "git-control:toggle"
        tooltip: "Git Control"
    }
    {
        type: "button"
        icon: "git-merge"
        callback: "merge-conflicts:toggle"
        tooltip: "Git Merge"
    }
    {
        type: "button"
        icon: "history"
        callback: "git-history:show-file-history"
        tooltip: "Git History"
    }
    {
        type: "button"
        icon: "flame"
        callback: "git-blame:toggle"
        tooltip: "Git Blame"
    }
    {
        type: "button"
        icon: "octoface"
        callback: "open-on-github:file"
        tooltip: "Open on Github"
    }
    {
        type: "spacer"
    }
    {
        type: "button"
        icon: "checklist"
        callback: "todo-show:find-in-project"
