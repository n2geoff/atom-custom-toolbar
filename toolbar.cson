    }
    {
        type: "spacer"
    }
    {
        type: "button"
        icon: "markdown"
        callback: "markdown-preview:toggle"
        tooltip: "Debug"
    }
    {
        type: "spacer"
    }
    {
        type: "button"
        icon: "gear"
        callback: "settings-view:open"
        tooltip: "Settings"
    }
